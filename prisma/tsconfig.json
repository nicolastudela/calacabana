{
  "extends": "@tsconfig/node18/tsconfig.json",
  "ts-node": {
    // Do not forget to `npm i -D tsconfig-paths`
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": "../",
    "moduleResolution": "node",
    "paths": {
      "@/components/*": ["components/*"],
      "@/features/*": ["features/*"],
      "@/styles/*": ["styles/*"],
      "@/config/*": ["config/*"],
      "@/utils/*": ["utils/*"],
      "@/types/*": ["types/*"],
      "@/shared/*": ["shared/*"],
      "@/lib/*": ["lib/*"],
      "@/server/*": ["server/*"],
    },
  },
}